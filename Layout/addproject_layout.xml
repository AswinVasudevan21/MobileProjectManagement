<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aswin.mobileprojectmanagement.AddProject">

    <com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnid"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"> </com.facebook.login.widget.LoginButton>

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/textViewEmail"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName" />

    <TextView
        android:text="WELCOME,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView5"
        android:layout_marginBottom="34dp"
        android:layout_alignBottom="@+id/textViewName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:textSize="16dp"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/btnid"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonProject"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/friendProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignEnd="@+id/buttonProject"
        android:layout_marginTop="37dp" />


</RelativeLayout>